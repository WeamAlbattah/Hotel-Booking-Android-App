<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/recCard1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="5.5">

            <TextView
                android:id="@+id/recHotelName"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:text="Hotel Name"
                android:textColor="@color/oteldarkblue"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recBookingDates"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:text="Dates 08 may - 20 may"
                android:textColor="#7C7676"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/recNights"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text="00 night/s"
                android:textColor="#7C7676"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="93dp"
            android:layout_marginLeft="250dp"
            android:orientation="horizontal"
            android:weightSum="5.5">

            <TextView
                android:id="@+id/recTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="36dp"
                android:text="00.0 $"
                android:textColor="@color/oteldarkblue"
                android:textSize="22sp"
                android:textStyle="bold" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>