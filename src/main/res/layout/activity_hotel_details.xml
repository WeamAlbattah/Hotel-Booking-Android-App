<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hotelDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardBackgroundColor="@color/otelblue"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp">

                <ImageSwitcher
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/imageSwitcher">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal">

                        <com.denzcoskun.imageslider.ImageSlider
                            android:id="@+id/imageSlider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:iss_auto_cycle="false"
                            app:iss_corner_radius="20"
                            app:iss_delay="1000"
                            app:iss_period="1000" />

                        <VideoView
                            android:id="@+id/videoView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            app:iss_corner_radius="20"/>


                    </FrameLayout>



                </ImageSwitcher>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hotelNameTextView"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="20dp"
                    android:text="Hotel Name"
                    android:textColor="@color/oteldarkblue"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/ratingStar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/ratingstar" />

                <TextView
                    android:id="@+id/hotalRatingTXV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="end"
                    android:text="9.9"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cityNameTextView"
                    android:layout_width="262dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="122dp"
                    android:text="City Name"
                    android:textColor="@color/oteldarkblue"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="61dp">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:text="Price:"
                        android:textColor="@color/oteldarkblue"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/hotelPriceTXV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="200$ / night"
                        android:textColor="@color/grey_font"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/about"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="324dp"
                    android:text="About:"
                    android:textColor="@color/oteldarkblue"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/hotelDescTextView"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="22dp"
                    android:text="Set 300 metres from La Cigale Concert Hall and less than 1 km from SacrÃ©-Coeur, Quartier Libre"
                    android:textColor="@color/grey_font"
                    android:textSize="20dp" />


                <fragment
                    android:id="@+id/mapFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="23dp"
                    tools:context="com.example.XYZ.googlemaps.MapsActivity"
                    tools:layout="@android:layout/simple_gallery_item" />


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/bookNowBTN"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_signup_btn"
        android:text="Book now"
        android:textSize="16dp"
        android:textColor="@color/oteldarkblue" />

</LinearLayout>
